# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/arbys-website
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/arbys-website?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_random
JWT_EXPIRE=30d

# Email Configuration (for Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@arbysbodyorganics.com

# Payment Gateway Configuration
# Paystack (Nigerian Payments)
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here

# Stripe (Optional - for international payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Client URL (for CORS and email links)
CLIENT_URL=http://localhost:3000
# For production:
# CLIENT_URL=https://arbys-body-organics.onrender.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
# 5MB in bytes (5 * 1024 * 1024)

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=3600000
# 1 hour in milliseconds

# Security
COOKIE_SECRET=your_cookie_secret_here_make_it_random
